<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="hk.com.dataworld.iattendance.SelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLocationRegistration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/place_autocomplete_separator_start"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/content_page_color_botton_a"
            android:text="@string/zoneRegistrationTitle"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorButtonText" />

        <Button
            android:id="@+id/btnTimecardRegistration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/place_autocomplete_separator_start"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/content_page_color_botton_b"
            android:text="@string/timeCardRegistrationTitle"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorButtonText" />

        <Button
            android:id="@+id/btnPunch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/place_autocomplete_separator_start"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/content_page_color_botton_d"
            android:text="@string/punchTitle"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorButtonText" />

        <Button
            android:id="@+id/btnSupervisorMode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/place_autocomplete_separator_start"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/content_page_color_botton_f"
            android:text="@string/supervisorTitle"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorButtonText" />
    </LinearLayout>
</ScrollView>